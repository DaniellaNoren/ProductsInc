<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Products_Inc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/productsStyle.css" />
</head>
<body>
    <div class="top-container" style="border:1px solid black;">
        <header style="opacity:.9;">
            <div id="myHeader">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-bottom box-shadow mb-3">
                    <div>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="myNav navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="float:left;margin:0px;">
                            <partial name="_LoginPartial" />
                            <ul class="navbar-nav flex-grow-1 nav  ms-auto" style="width:750px;padding:25px;">
                                <li class="nav-item">
                                    <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/imgLogo.png" alt="Company Logo" width="120" height="70" /></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                                </li>
                                <partial name="_RolesPartial" />
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Cart"><img src="~/img/cart.jpg" width="30" height="30" /></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <div class="container content">
            <main role="main" class="pb-3">
                <partial name="ProductViewPartial" />
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted ">
            <div class="container foot text-dark">
                &copy; 2021 - Products_Inc - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.24.0/babel.js"></script>
        <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
        <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
