<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Products_Inc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- <link rel="stylesheet" href="~/bootstrap-5.0.2-dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link href="~/css/productsStyle.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header class="head">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="Company Logo" width="100" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <!-- <partial name="_LoginPartial" /> -->

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Cart"><img src="~/img/cart.jpg" width="30" height="30" /></a>
                        </li>

                        <!-- <partial name="_RolesPartial" /> -->

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Products_Inc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>




    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.24.0/babel.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script> -->
    <!-- <script src="@Url.Content("~/js/jquery-3.6.0.min.js")"></script> -->
    <!-- <script src="@Url.Content("~/bootstrap-5.0.2-dist/js/bootstrap.bundle.js")"></script>  -->


    <script src="@Url.Content("~/js/react.development.js")"></script>
    <script src="@Url.Content("~/js/react-dom.development.js")"></script>



    <!--  <script src="@Url.Content("~/reactjs/Checkout.jsx")"></script>
    <script src="@Url.Content("~/reactjs/Login.jsx")"></script>
    <script src="@Url.Content("~/reactjs/Orders.jsx")"></script>
    <script src="@Url.Content("~/reactjs/Register.jsx")"></script>
    <script src="@Url.Content("~/reactjs/UserPage.jsx")"></script> -->
    <script src="@Url.Content("~/reactjs/Products.jsx")"></script>


    @RenderSection("Scripts", required: false)


</body>
</html>
